<p id="notice"><%= notice %></p>


<p>
  <strong>Title:</strong>
  <%= @coffee.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @coffee.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @coffee.price %>
</p>

<p>
  <strong>Restaurant:</strong>
  <%= @coffee.restaurant %>
</p>

<p>
   <% if @coffee.image.attached? %>
     <%= image_tag @coffee.image %>
   <% end %>
 </p>
 <h2>Review From</h2>
<%= form_with(model: @coffee_review, local: true) do |form| %>
  <div class= "field">
    <%= form.text_area :review %>
    <%= form.hidden_field :coffee_id, :value => @coffee.id %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<h2>Review Coffee List</h2>
<ul>
  <% @coffee.coffee_review.each do |coffee_review| %>
   <li><%= coffee_review.review %>     
    (<i><%= coffee_review.user.name if coffee_review.user %> </i>)</li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_coffee_path(@coffee) %> |
<%= link_to 'Back', coffees_path %>
